<h1>Inventory Filtered by: <%=@filter.name%></h1>

<form method="get" action="/inventory">
  <input type='submit' value="Clear Filter"/>
</form>

<table>
  <tr>
    <th>Game</th>
    <th>|</th>
    <th>Genre</th>
    <th>|</th>
    <th>Publisher</th>
    <th>|</th>
    <th>Stock</th>
    <th>|</th>
    <th>Buy Price</th>
    <th>|</th>
    <th>Sell Price</th>
    <th>|</th>
    <th>Mark Up Rate</th>
  </tr>
  <% for game in @games %>
  <% if game.publisher_id == @filter.id %>
  <tr>
    <td><%= game.name%> </td>
    <td>|</td>
    <td><%= game.genre%></td>
    <td>|</td>
    <td><%= game.publisher.name%></td>
    <td>|</td>
    <td><%= game.stock%> </td>
    <td>|</td>
    <td><%= game.buy_price %></td>
    <td>|</td>
    <td><%= game.sell_price %></td>
    <td>|</td>
    <td><%= ((game.buy_price.to_f / game.sell_price.to_f)*100).round(2) %>%</td>
  </tr>
  <% end %>
  <% end %>

</table>
