<h1>Sales</h1>
<a href="/sales/new">Add New Sale</a>

<table>
  <tr>
    <th>Game</th>
    <th>|</th>
    <th>Transaction Date</th>
    <th>|</th>
    <th>Price</th>
    <th>|</th>
    <th>Delete/Update</th>
  </tr>
  <% for sale in @sales %>
  <% game = sale.game %>
  <tr>
    <td><%= game.name if sale.game_id == game.id%></td>
    <td>|</td>
    <td><%= sale.transaction_date%> </td>
    <td>|</td>
    <td><%= game.sell_price if sale.game_id == game.id%> </td>
    <td>|</td>
    <td><form method="post" action="/sales/<%= sale.id%>/delete">
      <input type='submit' value="Delete"/>
    </form>
    <form method="get" action="/sales/<%= sale.id %>/update">
      <input type='submit' value='Update'/>
    </form></td>
  </tr>
  <% end %>

</table>
