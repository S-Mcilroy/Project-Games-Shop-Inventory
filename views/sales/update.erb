<div class="header">
<h1 class="header_text">Update Sale</h1>
</div>

  <form class="internal_form" method="post" action="/sales">
    <label for="transaction_date">Transaction Date:</label>
    <input id="transaction_date" type="date" name="transaction_date" value =<%=@sale.transaction_date%> max = <%= Date.today %> required/>

    <label for="game">Select a Game:</label>
    <select id="game_id" name="game_id" required>
    <% @games.each do |game| %>
      <option <%= "selected" if game.id == @sale.game_id  %> value = <%= game.id %> > <%= game.name %> </option>
      <% end %>
    </select>
    <br>
    <input type='submit' value="Add Sale"/>
  </form>
